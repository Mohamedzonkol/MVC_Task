@using EmployeeViewModel = Task.Models.ViewModel.EmployeeViewModel
@model EmployeeViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"><i class="bi bi-view-stacked"></i> Delete Employee </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Employee.Id" hidden />
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Employee.Name" class="form-control border-0 shadow" disabled />
                    <label asp-for="Employee.Name" class="ms-2"></label>
                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Employee.Email" class="form-control border-0 shadow" disabled />
                    <label asp-for="Employee.Email" class="ms-2"></label>
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>
            
                <div class="form-floating py-2 col-12">
                    <input asp-for="Employee.Salary" class="form-control border-0 shadow" disabled />
                    <label asp-for="Employee.Salary" class="ms-2"></label>
                    <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select disabled asp-for="@Model.Employee.DepartmentID" asp-items="@Model.DepartmentList" class="form-select border-0 shadow">
                        <option disabled selected>--Select Department--</option>
                    </select>
                    <label asp-for="Employee.DepartmentID" class="ms-2"></label>
                    <span asp-validation-for="Employee.DepartmentID" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control"> <i class="bi bi-check-circle"> Delete</i></button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            <i class="bi bi-x-circle"> Cancel</i>
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
